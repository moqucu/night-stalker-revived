<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Group xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.moqucu.games.nightstalker.controller.SplashScreenController">
    <VBox prefHeight="200.0" style="-fx-background-color: #534E03;">
      <ButtonBar prefHeight="24.0" style="-fx-background-color: #534E03;">
        <buttons>
               <Button id="quitButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#quitButtonPressed" style="-fx-background-color: #534E03;" text="Quit" textFill="WHITE">
                   <font>
                       <Font name="Intellect" size="12.0" />
                   </font>
               </Button>
               <Button id="playButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#playButtonPressed" style="-fx-background-color: #534E03;" text="Play" textFill="WHITE">
                   <font>
                       <Font name="Intellect" size="12.0" />
                   </font>
               </Button>
        </buttons>
      </ButtonBar>
        <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #534E03;" />
        <ImageView fitHeight="384.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@Night_Stalker_Revived_Slash_Screen.png" />
        </ImageView>
    </VBox>
</Group>
