<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Group
        xmlns="http://javafx.com/javafx/8.0.172-ea"
        xmlns:fx="http://javafx.com/fxml/1"
        id="org.moqucu.games.nightstalker.group1"
        fx:controller="org.moqucu.games.nightstalker.controller.SplashScreenController"
        stylesheets="@SplashScreen.css"
>
    <VBox prefHeight="200.0" style="-fx-background-color: #534E03;">
        <ButtonBar prefHeight="24.0" style="-fx-background-color: #534E03;">
            <buttons>
                <Button id="quitButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#quitButtonPressed"
                        style="-fx-font-family: Intellect; -fx-font-size: 12; -fx-background-color: #534E03;"
                        text="Quit" textFill="WHITE">
                </Button>
                <Button id="playButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#playButtonPressed"
                        style="-fx-font-family: Intellect; -fx-font-size: 12; -fx-background-color: #534E03;"
                        text="Play" textFill="WHITE">
                </Button>
            </buttons>
        </ButtonBar>
        <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #534E03;"/>
        <ImageView fitHeight="384.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@Night_Stalker_Revived_Slash_Screen.png"/>
        </ImageView>
    </VBox>
</Group>
